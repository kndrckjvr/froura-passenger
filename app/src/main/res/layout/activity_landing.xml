<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB700"
    tools:context="com.froura.develo4.passenger.LandingActivity">

    <Button
        android:id="@+id/mobLogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/frameFb"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/frameFb"
        android:layout_marginBottom="38dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
        android:elevation="10dp"
        android:fontFamily="@font/fjalla_one_regular"
        android:paddingLeft="18dp"
        android:shadowColor="#000"
        android:text="MOBILE NUMBER"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/googLogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_above="@+id/mobLogin"
        android:layout_alignLeft="@+id/frameFb"
        android:layout_alignStart="@+id/frameFb"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@mipmap/google"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="@font/fjalla_one_regular"
        android:paddingLeft="8dp"
        android:text="GOOGLE"
        android:textColor="#000000"
        android:textSize="24sp" />

    <FrameLayout
        android:id="@+id/frameFb"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_above="@+id/googLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" >

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Button
            android:id="@+id/faceLogin"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_above="@+id/googLogin"
            android:backgroundTint="@color/colorPrimaryDark"
            android:fontFamily="@font/fjalla_one_regular"
            android:drawableLeft="@mipmap/facebook"
            android:paddingLeft="8dp"
            android:text="FACEBOOK"
            android:textColor="#000000"
            android:textSize="24sp" />
    </FrameLayout>
</RelativeLayout>
