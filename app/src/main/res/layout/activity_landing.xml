<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.froura.develo4.passenger.LandingActivity">

    <ImageView
        android:id="@+id/logoWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:contentDescription="@string/logoWhite_desc"
        app:srcCompat="@drawable/logo_white" />

    <Button
        android:id="@+id/mobLogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/faceLogin"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/faceLogin"
        android:layout_marginBottom="38dp"
        android:background="@drawable/mobile_background"
        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
        android:paddingLeft="18dp"
        android:text="CONTINUE WITH MOBILE"
        android:textColor="#000000"
        android:textSize="15sp" />

    <Button
        android:id="@+id/googLogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_above="@+id/mobLogin"
        android:layout_alignLeft="@+id/faceLogin"
        android:layout_alignStart="@+id/faceLogin"
        android:layout_marginBottom="12dp"
        android:background="@drawable/google_background"
        android:drawableLeft="@mipmap/google"
        android:paddingLeft="8dp"
        android:text="CONTINUE WITH GOOGLE"
        android:textColor="#000000"
        android:textSize="15sp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/faceLogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_above="@+id/googLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/facebook_background"
        android:drawableLeft="@mipmap/facebook"
        android:paddingLeft="8dp"
        android:text="CONTINUE WITH FACEBOOK"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />
</RelativeLayout>
