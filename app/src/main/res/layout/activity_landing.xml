<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBB71E"
    tools:context="com.froura.develo4.passenger.LandingActivity">

    <Button
        android:id="@+id/mobLogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/frameFb"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/frameFb"
        android:layout_marginBottom="38dp"
        android:background="@drawable/background_border_sharp"
        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
        android:fontFamily="@font/fjalla_one_regular"
        android:paddingLeft="24dp"
        android:text="MOBILE NUMBER"
        android:textColor="#000000"
        android:textSize="24sp" />

    <Button
        android:id="@+id/googLogin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_above="@+id/mobLogin"
        android:layout_alignLeft="@+id/frameFb"
        android:layout_alignStart="@+id/frameFb"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@mipmap/google"
        android:background="@drawable/background_border_sharp"
        android:fontFamily="@font/fjalla_one_regular"
        android:text="GOOGLE"
        android:textColor="#000000"
        android:textSize="24sp" />

    <FrameLayout
        android:id="@+id/frameFb"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_above="@+id/googLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" >

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Button
            android:id="@+id/faceLogin"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_above="@+id/googLogin"
            android:background="@drawable/background_border_sharp"
            android:fontFamily="@font/fjalla_one_regular"
            android:drawableLeft="@mipmap/facebook"
            android:text="FACEBOOK"
            android:textColor="#000000"
            android:textSize="24sp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        facebook:srcCompat="@drawable/icon_hex" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/frameFb"
        android:orientation="horizontal">

        <View
            android:layout_width="92dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_height="2dp"
            android:clickable="false"
            android:background="#000000"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fjalla_one_regular"
            android:text="SIGN UP WITH"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp" />


        <View
            android:layout_width="92dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_height="2dp"
            android:clickable="false"
            android:background="#000000"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fjalla_one_regular"
        android:text="FROURÁ"
        android:textColor="#000"
        android:textSize="50sp" />

</RelativeLayout>
