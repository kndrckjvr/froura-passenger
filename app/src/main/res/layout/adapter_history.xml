<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/row_layout"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:clickable="true"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fare_txt_vw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_weight="1"
                android:padding="5dp"
                android:drawablePadding="5dp"
                android:text="Php 840.00"
                android:ellipsize="marquee"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/date_txt_vw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:padding="5dp"
                android:drawablePadding="5dp"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:layout_weight="1"
                android:text="December 20, 2017, 12:00 AM"
                android:textColor="#000"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:clickable="false"
            android:focusable="false"
            android:background="#454545"/>

        <TextView
            android:id="@+id/pickup_txt_vw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_pin_yellow_24dp"
            android:padding="5dp"
            android:drawablePadding="5dp"
            android:text="University of the East, Manila Campus"
            android:ellipsize="marquee"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dropoff_txt_vw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_places_black_24dp"
            android:padding="5dp"
            android:drawablePadding="5dp"
            android:text="Malabon"
            android:ellipsize="marquee"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:clickable="false"
            android:focusable="false"
            android:background="#454545"/>

        <TextView
            android:id="@+id/service_type_txt_vw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#434343"
            android:layout_gravity="end"
            android:textAlignment="viewEnd"
            android:padding="4dp"
            android:fontFamily="@font/open_sans_regular"
            android:text="Booking" />

    </LinearLayout>

</LinearLayout>